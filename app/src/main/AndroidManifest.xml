<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ufersa.qwater">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.WaterReportDetailsActivity"
            android:noHistory="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PopupGraphActivity"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity
            android:name=".activities.StoreWaterReportActivity"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity
            android:name=".activities.AnalyzeWaterReportActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SelectDateActivity"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity
            android:name=".activities.ListWaterSourcesActivity"
            android:theme="@style/AppTheme.PopupTheme" />

        <activity
            android:name=".activities.ClassificationDialogueActivity"
            android:theme="@style/AppTheme.PopupTheme"  />
    </application>

</manifest>